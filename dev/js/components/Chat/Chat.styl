$namespace = '.chat';

{$namespace} {
  max-width: 430px;
  font-size: 1.25rem;
  padding: 0.5em;
  margin-top: 0.75em;
  background: #eee;
  
  &__window {
    display: none;
  }
  
  &__blurb {
    margin: 0;
  }
  
  &__cta {
    width: 100%;
    font-size: inherit;
    text-transform: uppercase;
    font-weight: bold;
    padding: 0.5em;
    border: solid 0.1em rgba(0, 0, 0, 0.15);
    border-radius: 0.25em;
    margin-top: 0.5em;
    background-color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    
    &:hover {
      color: #fff;
      background-color: rgba(0, 0, 0, 0.25);
    }
  }
}